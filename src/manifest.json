{
    "name": "BeeLine Reader",
    "version": "0.0.2",
    "description": "Optimize your reading.",
    "browser_action": {
        "default_icon": "images/bee128.png",
        "default_title": "BeeLine Reader",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [ "background.js" ]
    },
    "web_accessible_resources": [
        "libs/bootstrap/css/bootstrap.min.css",
        "style.css",
        "libs/jquery.min.js",
        "libs/firebase.js",
        "libs/bootstrap/js/bootstrap-dropdown.js",
        "index.html",
        "index.js",
        "beeline.js"
    ],
    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "js": [
                "libs/jquery.min.js",
                "libs/firebase.js",
                "content_script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [ "storage", "tabs", "*://*/" ],
    "manifest_version": 2
}
